<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="menta.app.dao.tag.TagDao">
  <select id="selectList" resultType="menta.app.dao.tag.dataModel.TagDataModel">
    select * 
    from tags
  </select>

  <select id="selectOneByTagId" resultType="menta.app.dao.tag.dataModel.TagDataModel">
    select * 
    from tags 
    where id = #{tagId}
  </select>
  
  <insert id="insert">
    insert into tags(
    id,
    name,
    createdAt,
    updatedAt,
    isDeleted
    )
    values(
    #{id},
    #{name},
    #{createdAt},
    #{updatedAt},
    false
    )
  </insert>
  
  <update id="update">
    update tags set
    name = #{name},
    updatedAt = #{updatedAt}
    where id = #{id}
  </update>
  
  <delete id="delete">
    delete
    from tags
    where id = #{tagId}
  </delete>
  
</mapper>

