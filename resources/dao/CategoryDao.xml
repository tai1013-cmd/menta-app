<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="menta.app.dao.category.CategoryDao">
  <select id="selectList" resultType="menta.app.dao.category.dataModel.CategoryDataModel">
    select id,
      name,
      createdAt,
      updatedAt,
      isDeleted
    from categorys
  </select>

  <select id="selectOneByCategoryId" resultType="menta.app.dao.category.dataModel.CategoryDataModel">
    select * 
    from categorys 
    where id = #{categoryId}
  </select>
  
  <insert id="insert">
    insert into categorys(
    id,
    name,
    createdAt,
    updatedAt,
    isDeleted
    )
    values(
    #{id},
    #{name},
    #{createdAt},
    #{updatedAt},
    false
    )
  </insert>
  
  <update id="update">
    update categorys set
    name = #{name},
    updatedAt = #{updatedAt}
    where id = #{id}
  </update>
  
  <delete id="delete">
    delete
    from categorys
    where id = #{categoryId}
  </delete>
  
</mapper>

